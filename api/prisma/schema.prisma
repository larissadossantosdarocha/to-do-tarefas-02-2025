// /prisma/schema.prisma

// Defina o provedor de banco de dados (aqui estamos usando SQLite)
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // ou "postgresql", "mysql" dependendo do seu banco
  url      = env("DATABASE_URL")
}

// Definindo a tabela de Usuários
model Usuario {
  id        Int       @id @default(autoincrement())  // Chave primária
  nome      String
  email     String    @unique  // Garantindo que o email seja único
  tarefas   Tarefa[]  // Relacionamento 1:N com Tarefa
}

// Definindo a tabela de Tarefas
model Tarefa {
  id          Int       @id @default(autoincrement())  // Chave primária
  descricao   String
  setor       String
  prioridade  String
  status      String    @default("a fazer")
  usuarioId   Int       // Relacionamento com a tabela Usuario
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  createdAt   DateTime  @default(now())  // Data de criação da tarefa
}
