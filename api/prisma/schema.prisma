generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // ou "postgresql", "mysql" dependendo do seu banco
  url      = env("DATABASE_URL")
}

// Definindo a tabela de Usu√°rios
model Usuario {
  id        Int       @id @default(autoincrement())  
  nome      String
  email     String    @unique 
  tarefas   Tarefa[] 
}

// Definindo a tabela de Tarefas
model Tarefa {
  id          Int       @id @default(autoincrement()) 
  descricao   String
  setor       String
  prioridade  String
  usuarioId   Int      
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  createdAt   DateTime  @default(now())  

}
